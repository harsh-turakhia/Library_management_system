@model LMS_Data_Entity.Dto.AddEditUserDto;

<div class="container mt-2 p-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="d-flex justify-content-between align-items-center my-4 mx-auto" style="max-width: 600px;">

                @if (Model.UserId == 0)
                {
                    <h2 class="text-center mb-4">Add User</h2>
                }
                else
                {
                    <h2 class="text-center mb-4">Edit User</h2>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-primary">&lt; Back</a>
                }

            </div>

            <form method="post" asp-action="ManageUser" class="d-flex flex-column gap-3">

                <span asp-validation-summary="ModelOnly" class="text-danger"></span>
                <input type="hidden" asp-for="UserId" />

                <div class="form-floating">
                    <input asp-for="Name" type="text" class="form-control" required />
                    <label for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" required onblur="CheckEmailExist()" />
                    <label for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                @if (!Model.UserId.HasValue)
                {
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" required />
                        <label for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                }

                <div class="form-floating">
                    <input asp-for="Address" type="text" class="form-control" required />
                    <label for="Address">Address</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="PhoneNumber" type="text" class="form-control" required />
                    <label for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <select asp-for="RoleId" class="form-select" required>
                        <option value="" selected>Select role</option>
                        <option value="2">Librarian</option>
                        <option value="3">User</option>
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
