        // User Search
        $('#searchUser').on('keyup', function () {
            console.log(1)

            var query = $(this).val();
            if (query.length >= 0) {

                $.ajax({
                    method: "GET",
                    url: "/Admin/AdminUserSearchHandler",
                    data: { query: query },

                    success: function (response) {
                        console.log(response);

                        $('#userTableDivId').empty();
                        if (response.length) {
                            $.each(response, function (index, user) {
                                $('#userTableDivId').append(`
