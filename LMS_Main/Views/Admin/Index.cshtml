                                                                                                                                                                                                                                <td>${user.name}</td>
                                                                                                                                                                                                                                    <td>${user.email}</td>
                                                                                                                                                                                                                                    <td>${user.phoneNumber}</td>
                                                                                                                                                                                                                                    <td>${user.address}</td>
                                                                                                                                                                                                                                    <td>${user.roleName}</td>
                                                                                                                                                                                                                                <td>

                                                                                                                                                                                                                                    <div class="d-flex justify-content-center">
                                                                                                                                                                                                                                        <div class="me-3 border border-primary">
                                                                                                                                                                                                                                                <a class="p-2 rounded-2" asp-controller="Admin" asp-action="EditUser" asp-route-id="${user.userId}">
                                                                                                                                                                                                                                                <i class="bi bi-pencil-fill text-primary fs-4"></i>
                                                                                                                                                                                                                                            </a>
                                                                                                                                                                                                                                        </div>

                                                                                                                                                                                                                                            <div class="me-3 border border-danger removeUserIcon" data-userid="${user.userId}" data-bs-toggle="modal" data-bs-target="#DeleteUserModalId">
                                                                                                                                                                                                                                            <i class="bi bi-trash3-fill text-danger p-2 fs-4 "></i>
                                                                                                                                                                                                                                        </div>
                                                                                                                                                                                                                                    </div>

                                                                                                                                                                                                                                </td>
                                                                                                                                                                                                                            </tr>
                                                                                                                                                                                                                        `);
                            });
                        }
                        else {
                            $('#userTableDivId').append(`
                                                                                                                                                                                                                    <tr class="text-center">
                                                                                                                                                                                                                         <div>
                                                                                                                                                                                                                            <span class="d-flex justify-content-center my-4 text-center h3"> No User found! </span>
                                                                                                                                                                                                                          </div>
                                                                                                                                                                                                                    </tr>
                                                                                                                                                                                                                    `);
                        }
                    },
                    error: function (err) {
                        console.log("AdminSearchHandler ERROR", err.message);
                    }
                });
            }

        });

        // Book Search
        $('#searchBook').on('keyup', function () {

            var query = $(this).val();
            if (query.length >= 0) {

                $.ajax({
                    method: "GET",
                    url: "/Admin/AdminBookSearchHandler",
                    data: { query: query },

                    success: function (response) {

                        console.log(response);

                        $('#bookTableDivId').empty();
                        if (response.length) {
                            $.each(response, function (index, book) {
                                $('#bookTableDivId').append(`
                                                                                                                                                                                                                        <tr class="text-center">
                                                                                                                                                                                                                            <td>${book.title}</td>
                                                                                                                                                                                                                                <td>${book.publicationName}</td>
                                                                                                                                                                                                                                <td>${book.authorName}</td>
                                                                                                                                                                                                                                <td>${book.languageName}</td>
                                                                                                                                                                                                                                <td>${book.copies}</td>
                                                                                                                                                                                                                                <td>${book.price}</td>
                                                                                                                                                                                                                            <td>
                                                                                                                                                                                                                                <div class="d-flex justify-content-center">

                                                                                                                                                                                                                                    <div class="me-3 border border-primary">
                                                                                                                                                                                                                                            <a class=" p-2 rounded-2" asp-controller="Admin" asp-action="EditBook" asp-route-id="${book.bookId}">
                                                                                                                                                                                                                                            <i class="bi bi-pencil-fill text-primary fs-4"></i>
                                                                                                                                                                                                                                        </a>
                                                                                                                                                                                                                                    </div>

                                                                                                                                                                                                                                        <div class="ms-3 border border-danger removeBookIcon" data-bookId="${book.bookId}" data-bs-toggle="modal" data-bs-target="#DeleteBookModalId">
                                                                                                                                                                                                                                        <i class="p-2 bi bi-trash3-fill text-danger fs-4"></i>
                                                                                                                                                                                                                                    </div>

                                                                                                                                                                                                                                </div>
                                                                                                                                                                                                                            </td>
                                                                                                                                                                                                                        </tr>
                                                                                                                                                                                                                    `);
                            });
                        }
                        else {
                            $('#bookTableDivId').append(`
                                                                                                                                                                                                                 <tr class="text-center">
                                                                                                                                                                                                                             <div>
                                                                                                                                                                                                                                <span class="d-flex justify-content-center my-4 text-center h3"> No books found! </span>
                                                                                                                                                                                                                              </div>
                                                                                                                                                                                                                        </tr>
                                                                                                                                                                                                                        `);
                        }
                    },
                    error: function (err) {
                        console.log("AdminBookSearchHandler ERROR", err.message);
                    }
                });
            }

        });

        // Assigned Book Search
        $('#searchAssignBook').on('keyup', function () {
            var query = $(this).val();

            if (query.length >= 0) {
                $.ajax({
                    method: "GET",
                    url: "/Admin/AdminAssignBookSearchHandler",
                    data: { query: query },

                    success: function (response) {
                        console.log(response);

                        $('#assignedBookTableDivId').empty();

                        if (response) {
                            $.each(response, function (index, book) {
                                $('#assignedBookTableDivId').append(`
                                                                                                                                                                                                        <tr>
                                                                                                                                                                                                            <td${book.bookName}</td>
                                                                                                                                                                                                            <td>${book.userName}</td>

                                                                                                                                                                                                            <td>${book.issueDate}</td>
                                                                                                                                                                                                            <td>${book.returnDate}</td>
                                                                                                                                                                                                            <td>${book.returnedOn}</td>
                                                                                                                                                                                                            <td>${book.statusName}</td>
                                                                                                                                                                                                            <td>
                                                                                                                                                                                                    <div class="d-flex justify-content-center">
                                                                                                                                                                                                            <a class="btn btn-outline-primary me-2" asp-controller="Admin" asp-action="EditAssignBook" asp-route-id="${book.assignedId}" title="Edit Book">
                                                                                                                                                                                                            <i class="bi bi-pencil-fill"></i>
                                                                                                                                                                                                        </a>
                                                                                                                                                                                                    </div>
                                                                                                                                                    </td>
                                                                                                                                                                                                        </tr>
                                                                                                                                                                                                    `)
                            })
                        }
                        else {
                            $('#assignedBookTableDivId').append(`
                                                                                                                                                                                                         <tr class="text-center">
                                                                                                                                                                                                                     <div>
                                                                                                                                                                                                                        <span class="d-flex justify-content-center my-4 text-center h3"> No books found! </span>
                                                                                                                                                                                                                      </div>
                                                                                                                                                                                                                </tr>
                                                                                                                                                                                                    `);
                        }
                    },
                    error: function (err) {
                        console.log("AdminAssignBookSearchHandler ERROR", err.message);
                    }
                });
            }
        })

        // Remove Book
        var bookId, UserId;

        $(document).on('click', '.removeBookIcon', function () {
            bookId = $(this).data('bookid');
        });

        $('#removeBookBtnId').on('click', function () {
            $.ajax({
                method: "POST",
                url: "/Admin/AdminRemoveBook",
                data: { bookId: bookId },

                success: function (response) {
                    if (response.success) {
                        $('#DeleteBookModalId').modal('hide');
                        $('#bookId-' + bookId).remove();
                    }
                    else {
                        console.log("Book could not be removed");
                    }
                },

                error: function (err) {
                    console.log("AdminRemoveBook ERROR", err);
                }
            });
        });

        // Remove User
        $(document).on('click', '.removeUserIcon', function () {
            UserId = $(this).data('userid');
        });

        $('#removeUserBtnId').on('click', function () {
            $.ajax({
                method: "POST",
                url: "/Admin/AdminRemoveUser",
                data: { UserId: UserId },

                success: function (response) {
                    if (response.success) {
                        $('#DeleteUserModalId').modal('hide');
                        $('#userId-' + UserId).remove();
                    } else {
                        console.log("User could not be removed");
                    }

                    //$('#DeleteUserModalId').modal('hide');
                    //$('#userId-' + UserId).remove();
                },

                error: function (err) {
                    console.log("AdminRemoveUser ERROR", err);
                }
            });
        });

    });

</script>


<script>
    const activeTab = localStorage.getItem('activeTab') || 'user';

    if (activeTab) {
        // Remove active classes from all tabs and panes
        $('.nav-link').removeClass('active');
        $('.tab-pane').removeClass('show active');

        // Activate the stored tab
        $(`a[href="#${activeTab}"]`).addClass('active');
        $(`#${activeTab}`).addClass('show active');
    }

    $('.nav-link').on('click', function () {
        const targetId = $(this).attr('href').substring(1); // Get the ID without '#'
        localStorage.setItem('activeTab', targetId); // Store the active tab ID
    });

</script>
